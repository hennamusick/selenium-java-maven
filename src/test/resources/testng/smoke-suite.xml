<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Rahul Shetty - Smoke Test Suite">
    <listeners>
        <listener class-name="com.framework.utils.AllureListener"/>
    </listeners>
    
    <!-- Run only smoke tests for Rahul Shetty Academy -->
    <test name="Rahul Shetty - Smoke Tests">
        <classes>
            <class name="com.framework.tests.rahulshetty.HomePageTest">
                <methods>
                    <include name="testAlert"/>
                    <include name="testNameInput"/>
                </methods>
            </class>
            <class name="com.framework.tests.rahulshetty.RadioButtonTest">
                <methods>
                    <include name="testRadioButtonsVisibilityAndState"/>
                    <include name="testDefaultRadioButtonState"/>
                </methods>
            </class>
            <class name="com.framework.tests.rahulshetty.SearchBarTest">
                <methods>
                    <include name="testAutocompleteSuggestionsAppear"/>
                    <include name="testAutocompleteClearAndReenter"/>
                </methods>
            </class>
            <class name="com.framework.tests.rahulshetty.DropdownTest">
                <methods>
                    <include name="testDropdownDisplayed"/>
                    <include name="testDefaultSelectOption"/>
                </methods>
            </class>
            <class name="com.framework.tests.rahulshetty.CheckboxTest">
                <methods>
                    <include name="testCheckboxesVisibilityAndState"/>
                    <include name="testDefaultUncheckedState"/>
                    <include name="testSafeCheckMethods"/>
                </methods>
            </class>
            <class name="com.framework.tests.rahulshetty.WindowSwitchTest">
                <methods>
                    <include name="testOpenWindowButtonVisibilityAndState"/>
                    <include name="testOpenWindowButtonOpensNewWindow"/>
                </methods>
            </class>
            <class name="com.framework.tests.rahulshetty.HideShowTest">
                <methods>
                    <include name="testHideShowButtonsVisibilityAndState"/>
                    <include name="testTextBoxDisplayedByDefault"/>
                </methods>
            </class>
            <class name="com.framework.tests.rahulshetty.WebTableTest">
                <methods>
                    <include name="testTableIsDisplayed"/>
                    <include name="testTableHeaders"/>
                </methods>
            </class>
            <class name="com.framework.tests.rahulshetty.FixedHeaderTableTest">
                <methods>
                    <include name="testFixedTableIsDisplayed"/>
                    <include name="testTableHeaders"/>
                </methods>
            </class>
            <class name="com.framework.tests.rahulshetty.AlertTest">
                <methods>
                    <include name="testAlertButtonVisibilityAndState"/>
                    <include name="testAlertWithEnteredName"/>
                    <include name="testConfirmButtonVisibilityAndState"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
