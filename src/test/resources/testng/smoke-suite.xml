<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Smoke Test Suite">
    <listeners>
        <listener class-name="com.framework.utils.TestListener"/>
    </listeners>
    
    <!-- Run only smoke tests across all environments -->
    <test name="Smoke Tests">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.framework.tests.HomePageTest"/>
            <class name="com.framework.tests.RadioButtonTest"/>
            <class name="com.framework.tests.SearchBarTest"/>
            <!-- <class name="com.framework.tests.SauceDemoTest"/> DISABLED -->
        </classes>
    </test>
</suite>
