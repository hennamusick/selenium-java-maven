<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="SauceDemo - Regression Test Suite">
    <listeners>
        <listener class-name="com.framework.utils.TestListener"/>
    </listeners>
    
    <!-- Run all regression tests for SauceDemo (30 tests total) -->
    <test name="SauceDemo - Regression Tests">
        <classes>
            <!-- LoginTest: 26 comprehensive login scenario tests -->
            <class name="com.framework.tests.saucedemo.LoginTest">
                <methods>
                    <!-- Login Page Element Tests (4 tests) -->
                    <include name="testLoginPageLoads"/>
                    <include name="testPageTitle"/>
                    <include name="testLoginElementsEnabled"/>
                    <include name="testLoginButtonText"/>
                    
                    <!-- Input Field Tests (4 tests) -->
                    <include name="testUsernameFieldAcceptsInput"/>
                    <include name="testPasswordFieldAcceptsInput"/>
                    <include name="testClearUsernameField"/>
                    <include name="testClearPasswordField"/>
                    
                    <!-- Valid Login Scenarios - All User Types (6 tests) -->
                    <include name="testLoginWithStandardUser"/>
                    <include name="testLoginWithLockedUser"/>
                    <include name="testLoginWithProblemUser"/>
                    <include name="testLoginWithPerformanceUser"/>
                    <include name="testLoginWithErrorUser"/>
                    <include name="testLoginWithVisualUser"/>
                    
                    <!-- Invalid Credentials Tests (5 tests) -->
                    <include name="testLoginWithInvalidUsername"/>
                    <include name="testLoginWithInvalidPassword"/>
                    <include name="testLoginWithEmptyUsername"/>
                    <include name="testLoginWithEmptyPassword"/>
                    <include name="testLoginWithEmptyCredentials"/>
                    
                    <!-- Edge Case and Security Tests (6 tests) -->
                    <include name="testLoginWithSpecialCharactersUsername"/>
                    <include name="testLoginWithSQLInjection"/>
                    <include name="testLoginWithWrongCase"/>
                    <include name="testLoginWithSpacesInUsername"/>
                    <include name="testMultipleFailedLoginAttempts"/>
                    <include name="testLoginAfterClearingInvalidCredentials"/>
                </methods>
            </class>
            
            <!-- InventoryPageTest: 4 focused inventory page tests -->
            <class name="com.framework.tests.saucedemo.InventoryPageTest">
                <methods>
                    <include name="testInventoryPageDisplay"/>
                    <include name="testInventoryPageElements"/>
                    <include name="testInventoryItemsDisplayed"/>
                    <include name="testProductNamesDisplayed"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
